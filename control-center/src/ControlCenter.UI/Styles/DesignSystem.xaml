<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="CC.Background">#111827</Color>
    <Color x:Key="CC.Surface">#1F2937</Color>
    <Color x:Key="CC.SurfaceAlt">#374151</Color>
    <Color x:Key="CC.Text">#F9FAFB</Color>
    <Color x:Key="CC.TextMuted">#D1D5DB</Color>
    <Color x:Key="CC.Accent">#2563EB</Color>

    <SolidColorBrush x:Key="CC.BackgroundBrush" Color="{StaticResource CC.Background}" />
    <SolidColorBrush x:Key="CC.SurfaceBrush" Color="{StaticResource CC.Surface}" />
    <SolidColorBrush x:Key="CC.SurfaceAltBrush" Color="{StaticResource CC.SurfaceAlt}" />
    <SolidColorBrush x:Key="CC.TextBrush" Color="{StaticResource CC.Text}" />
    <SolidColorBrush x:Key="CC.TextMutedBrush" Color="{StaticResource CC.TextMuted}" />
    <SolidColorBrush x:Key="CC.AccentBrush" Color="{StaticResource CC.Accent}" />

    <Style x:Key="CC.Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CC.SurfaceBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0,0,12,12" />
    </Style>

    <Style x:Key="CC.Title" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource CC.TextBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="CC.Body" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource CC.TextMutedBrush}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="CC.NavButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource CC.SurfaceAltBrush}" />
        <Setter Property="Foreground" Value="{StaticResource CC.TextBrush}" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
</ResourceDictionary>
